!!!
%html
  %head
    %title Noteshare Editor
    %link{:href => 'http://cdnjs.cloudflare.com/ajax/libs/font-awesome/3.2.1/css/font-awesome.min.css', :rel => 'stylesheet'}/
    %link{:href => "/stylesheets/materialize.min.css", :media => "screen,projection", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/stylesheets/asciidoctor.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/stylesheets/main.css", :rel => "stylesheet", :type => "text/css"}/
    / Let browser know website is optimized for mobile
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/


    %script{:type => "text/x-mathjax-config"}
    :cdata
      MathJax.Hub.Config({
      tex2jax: {
      inlineMath: [["\\(", "\\)"]],
      displayMath: [["\\[", "\\]"]],
      ignoreClass: "nostem|nolatexmath"
      },
      asciimath2jax: {
      delimiters: [["\\$", "\\$"]],
      ignoreClass: "nostem|noasciimath"
      },
      TeX: { extensions: ["mhchem.js"] }
      });

    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.4.0/MathJax.js?config=TeX-MML-AM_HTMLorMML"}
  %body{style: 'position:absolute; left:0; right:0; bottom:0; top:0;'}
    / Import jQuery before materialize.js
    %script{:src => "https://code.jquery.com/jquery-2.1.1.min.js", :type => "text/javascript"}
    %script{:src => "/javascripts/materialize.min.js", :type => "text/javascript"}
    .container{style: 'position:absolute; left:0; right:0; bottom:0; top:0;'}
      .navbar-fixed{style: 'position:absolute; left:0; right:0; top:0;'}
        %nav
          .nav-wrapper{style: 'padding-left:3em; background-color:#aaa;'}
            %a.brand-logo{:href => "#!", style: 'margin-left:2em;'} Logoo
            %ul.right.hide-on-med-and-down{style: 'margin-top:20px;'}
              %li
                %a{:href => "sass.html"} Sass
              %li
                %a{:href => "badges.html"} Components
      .row{style: 'overflow: hidden'}
        = yield

      %footer{style: 'position:absolute; bottom:0; width:100%'}
        .container
          %p
